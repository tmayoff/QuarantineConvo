@model IEnumerable<IdentityRole>

<div class="flex-grow-1 d-flex flex-column m-5">
    <div class="d-flex flex-column justify-content-center align-items-center" style="margin: 15px;">
        <h2 class="text-center">All Roles</h2>
        <a class="btn btn-primary" type="button" asp-action="Create">Add Role</a>
    </div>

    <div class="d-flex flex-grow-1" style="margin: 10px;">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>ID</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model) {
                        <tr>
                            <td>@role.Name</td>
                            <td>@role.Id</td>
                            <td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Update</a></td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>