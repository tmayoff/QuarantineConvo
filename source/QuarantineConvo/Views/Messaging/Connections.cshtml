@model IEnumerable<Connection>
@{
    ViewData["Title"] = "Connections";
}

<h1>Self-Isolating Bros</h1>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            width: 40%;
        }
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }
    </style>
    <script src="~/js/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/messaging.js"></script>
</head>
<body>
    <div class="container">
            @foreach (Connection c in Model)
            {
                <div class="row">
                    <form id="@c.ID" class="card" method="post" asp-controller="Messaging" asp-action="Index">

                        @if (c.user1 == User.Identity.Name)
                        {
                            <p a>@c.user2</p>
                        }
                        else
                        {
                            <p>@c.user1</p>
                        }
                        <input hidden Name="connectionId" value="@c.ID"/>
                    </form>
                </div>
                <script>
                    document.getElementById("@c.ID").addEventListener("click", document.getElementById("@c.ID").submit);
                </script>
        }
        </div>
</body>

