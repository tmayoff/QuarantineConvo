@model IEnumerable<Interest>
@{
    ViewData["Title"] = "Find A Connection";
}

<div class="d-flex flex-column flex-grow-1">

    <link rel="stylesheet" href="~/css/find_connection.css" />
    <script src="~/js/find_connection.js" asp-append-version="true"></script>

    <div>
        <h2 class="text-center">Trying to find that connection you long-for?</h2>
        <h3 class="text-center">We've got you covered!</h3>
        <br />
        <h5 class="text-center">Pick from among the list of interests the ones that you wish to talk about and we will get you connected to another person somewhere in this world that is looking for the same conversation. :)</h5>
    </div>

    <div class="d-flex flex-grow-1 justify-content-center">
        <form class="d-flex flex-column align-items-center justify-content-sm-center" style="width: 75%;" asp-action="Search">
            <div class="d-flex justify-content-center form-row" style="margin-bottom: 10px;">
                @foreach (Interest interest in Model) {
                    <label class="shadow-sm d-flex justify-content-center interest-container">
                        <input type="checkbox" name="interestCheckboxes" class="interest-checkbox" value="@interest.Name">
                        <span>@interest.Name</span>
                    </label>
                }
            </div>
            <div class="form-row">
                <input type="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
