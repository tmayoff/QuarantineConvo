<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuarantineConvo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <div class="d-flex flex-column h-100">
        <div class="container flex-grow-1" style="margin-bottom: 60px">
            <main role="main" class="flex-grow-1 d-flex flex-column h-100">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer">
            <div class="container">
                &copy; 2020 - QuarantineConvo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
